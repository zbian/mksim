extends layout

block content
  div(class='login')
    div(class="content")
      form(class="form-vertical login-form",method='POST',action='/login',id="loginform")
        h3(class="form-title") 登录
        div(class='alert alert-error hide')
          button(class='close',data-dismiss='alert')
          span 请输入用户名及密码
        div(class='control-group')
          label(class='control-label visible-ie8 visible-ie9') 用户名
          div(class='controls')
            div(class='input-icon left')
              i(class='icon-user')
              input(class='m-wrap placeholder-no-fix',type='text',autocomplete='off',placeholder='用户名',name='user')
        div(class='control-group')
          label(class='control-label visible-ie8 visible-ie9') 密码
          div(class='controls')
            div(class='input-icon left')
              i(class='icon-lock')
              input(class='m-wrap placeholder-no-fix',type='password',autocomplete='off',placeholder='密码',name='password')
        div(class='form-actions')
          input(type='submit',name='btnlogin',class='btn blue pull-right',value='登录')
